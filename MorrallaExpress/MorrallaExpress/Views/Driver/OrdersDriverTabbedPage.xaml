            xmlns:prism="http://prismlibrary.com"
            xmlns:local="clr-namespace:MorrallaExpress.Views.Driver"
            prism:ViewModelLocator.AutowireViewModel="True"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="MorrallaExpress.Views.Driver.OrdersDriverTabbedPage"
            android:TabbedPage.BarSelectedItemColor="#6ca142"
            android:TabbedPage.BarItemColor="#8da2b9">
    <TabbedPage.Children>
        <local:AvailableOrdersDriverPage Title="Disponibles" IconImageSource="pending.png"/>
        <local:ActiveOrdersDriverPage Title="Activas" IconImageSource="active.png"/>
        <local:HistoryOrdersDriverPage Title="Historial" IconImageSource="history.png"/>
    </TabbedPage.Children>
</TabbedPage>